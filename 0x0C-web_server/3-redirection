#!/usr/bin/env/ bash
#installing nginx

sudo apt-get -y update
sudo apt-get -y install nginx

sudo echo "Hello World!" | sudo tee /var/www/html/index.html
sudo sed -i "/server_name _;/a \\\n\tlocation /redirect_me {\n\t\treturn 301 https://https://github.com/hendrixxD;\n\t}" /etc/nginx/sites-available/default
sudo service nginx restart
